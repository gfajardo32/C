{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C: Build Active File (clang)",
      "type": "shell",
      "command": "/usr/bin/clang",
      "args": [
        "-std=c11",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Compile the currently active C file with clang"
    }
  ]
}